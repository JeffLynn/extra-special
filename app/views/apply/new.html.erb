<%# JL 2013.07.25 - updated for Rails 3 
    - replaced "<%" with "<%=" for "form_for"
    - used Rails 3 syntax
    - changed the error handling to be Rails 3 compatible by rendering a new "partial" /shared/error_messages (see Ruby on Rails Tutorial P309)
    - removed the left_menu formatting
    - told Ruby that the label html is safe (it was escaping the html rather than applying it) %>

<img alt="Home" src="/images/how_to_apply.jpg" />
<h1 class="section_title how_to_apply_title">How to apply</h1>
<%= form_for(@application) do |f| %>
   <%= render 'shared/error_messages' %>

  <p>
    <%= f.label :name_of_applicant, "Name of Applicant#{mandatory_indicator()}".html_safe %> 
    <%= f.text_field :name_of_applicant, :class => 'text' %>
  </p>
  <p>
    <%= f.label :address_of_applicant, "Address of Applicant #{mandatory_indicator()}".html_safe %>
    <%= f.text_area :address_of_applicant %>
  </p>
  <p>
    <%= f.label :name_of_applicants_supporter, "Name(s) of Applicant's Supporter(s) #{mandatory_indicator()}".html_safe %>
    <%= f.text_field :name_of_applicants_supporter, :class => 'text' %>
  </p>
  <p>
    <%= f.label :contact_details_of_supporter, "Contact Details of Supporter(s)<br />(including telephone &amp;/or email) #{mandatory_indicator()}".html_safe %>
    <%= f.text_area :contact_details_of_supporter %>
  </p>
  <p>
    <%= f.label :what_applicant_is_applying_for, "What Applicant is applying for #{mandatory_indicator()}".html_safe %>
    <%= f.text_area :what_applicant_is_applying_for %>
  </p>
  <p>
    <%= f.label :relevant_information, "Any relevant information about<br/>applicant and application #{mandatory_indicator()}".html_safe %>
    <%= f.text_area(:relevant_information) %>
  </p>
  <p>
    <%= f.label :details_of_cost, "Details of Cost<br />(Attach quotation or estimate) #{mandatory_indicator()}".html_safe %>
    <%= f.text_area :details_of_cost %>
  </p>
  <p>
    <%= f.label :other_contributions, "Amount Which Other May Have Agreed to <br/>Contribute #{mandatory_indicator()}".html_safe %>
    <%= f.text_field :other_contributions, class: 'text' %>
  </p>
  <p>
    <%= f.label :amount_requested_from_extra_special_trust, "Amount Requested from The ExtraSpecial Trust #{mandatory_indicator()}".html_safe %>
    <%= f.text_field :amount_requested_from_extra_special_trust, class: 'text' %>
  </p>
  <div class="p_like">
    <span class="label">If you are in receipt of any of the following funding<br/> please tick the appropriate box <%= mandatory_indicator() %></span>
    <div class="checkboxes">
      <ul>
        <li class="option"><%= f.check_box(:registered_care_allowance) %> <%= f.label :registered_care_allowance, 'Registered care allowance' %></li>
        <li class="option"><%= f.check_box(:supported_living_allowance) %> <%= f.label :supported_living_allowance, 'Supported living allowance' %></li>
        <li class="option"><%= f.check_box(:domiciliary_allowance) %> <%= f.label :domiciliary_allowance, 'Domiciliary allowance' %></li>
        <li class="option"><%= f.check_box(:no_additional_funding) %> <%= f.label :no_additional_funding, 'None' %></li>
      </ul>
    </div>
  </div>
  <div class="p_like">
    <span class="label">&nbsp;</span>
    <div class="checkboxes">
      <ul>
        <li><%= f.check_box(:accept_terms_and_conditions) %> <%= f.label :accept_terms_and_conditions, 'Click here to accept our Terms & Conditions' %></li>
      </ul>
    </div>
  </div>
  <div class="p_like">
    <span class="label">&nbsp;</span>
    <div>
      <%= f.submit("Submit", class: 'submit') %> <%# JL 2013.07.25 - changed to Rails 3 style hash %>
    </div>
  </div>
<% end %>
  <div id="notes">
    <p>
      The supporter in this application can be a carer, support worker, social worker or care organisation; if the supporter
      is not a professional in the field of learning disabilities, confirmation from a professional person, such as a social worker
      or a doctor, that the applicant has a recognised learning disability, will be required.
    </p>
    <p>
      If in any doubt about ExtraSpecial grants, please contact the Hon Secretary at:
    </p>
    <p class="address">
      The ExtraSpecial Trust<br />
      5-6 Brook Business Park<br />
      Folly Brook Road<br />
      Emerson's Green<br />
      Bristol BS16 7FL<br />
    </p>
    <p>Registered Charity: 1129928</p>
    <p>
      ALL APPLICANTS' INFORMATION WILL BE KEPT IN STRICT CONFIDENCE<br /> WITHIN THE EXTRASPECIAL TRUST
    </p>
  </div>