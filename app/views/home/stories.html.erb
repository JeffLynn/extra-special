<ol id="story_list">
  <% @stories.each do |story| %>
    <li <%= @story && story.id == @story.id ? "class=\"active\"" : "" %> >
      <%= link_to(h(story.name), story_path(story.id)) %>
    </li>
  <% end %>
</ol>
<div id="story">
  <div id="image">
    <%= image_tag(@story.picture.url(:banner)) if @story %>
  </div>
  <div id="text">
    <h1 class="section_title"><%= h(@story.title) if @story %></h1>
    <p class="main_content stories"><%= simple_format(@story.body) if @story %></p>
  </div>
</div>
